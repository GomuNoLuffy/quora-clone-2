<p><a href="users/<%= current_user.id %>">View User Profile</a></p>

<h3>Title <%= @question.title %></h3>
<p><%= @question.description %></p>
<p>Question submitted by: <%= @question.user.username %></p>

<p>Please submit your answer</p>

<form action="/answers" method="post">
	<input type="hidden" name=answer[question_id] value="<%= @question.id %>">
	<input type="text" name="answer[description]">
	<br><br>
	<input type="submit" value="submit">
</form>

<h2>Submitted Answers</h2>
<% @answers_list.each do |answer|%>
	<p>Submitted By: <%= answer.user.username %></p>
	<p>Description: <%= answer.description %></p>
<% end %>

<p><a href="/questions">Back to all questions</a></p>