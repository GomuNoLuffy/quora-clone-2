<div class="container page-width">
	<p>Please submit your question</p>

	<% if @error != nil %>
		<h2>Errors: <%= @error %></h2>
	<% end %>

	<form action="/questions" method="post">
		<p> Title(maximum 255 characters): </p>

		<input type="text" name="question[title]">
		<p> Description of question</p>

		<textarea type="text" name="question[description]" class="text-form"></textarea>
		<br><br>
		<input type="submit" value="submit">
	</form>
</div>