<h2>My Answers</h2>
<div>
	<ul class="list-group">
		<% @answers_list.each do |answer|%>
			 <li class="list-group-item">
				 <span class="emphasize">Question: <a href="/questions/<%= answer.question_id %>"><%= answer.question.title %></a></span>
				 <br>
				 <span class="norm more">My answer: <%= simple_format(answer.description) %></span>
			 </li>
		 <% end %>
	</ul>
